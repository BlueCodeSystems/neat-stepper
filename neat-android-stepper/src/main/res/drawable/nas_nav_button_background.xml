<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <inset android:insetBottom="@dimen/nav_button_margin" android:insetLeft="@dimen/nav_button_margin" android:insetRight="@dimen/nav_button_margin" android:insetTop="@dimen/nav_button_margin">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/nav_button_corner_radius" />
                <solid android:color="@color/navButtonBackground" />
                <padding android:bottom="@dimen/nv_button_vertical_padding" android:left="@dimen/nav_button_horizontal_padding" android:right="@dimen/nav_button_horizontal_padding" android:top="@dimen/nv_button_vertical_padding" />
            </shape>
        </inset>
    </item>

    <item>

        <inset android:insetBottom="@dimen/nav_button_margin" android:insetLeft="@dimen/nav_button_margin" android:insetRight="@dimen/nav_button_margin" android:insetTop="@dimen/nav_button_margin">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/nav_button_corner_radius" />
                <solid android:color="@android:color/transparent" />
                <padding android:bottom="@dimen/nv_button_vertical_padding" android:left="@dimen/nav_button_horizontal_padding" android:right="@dimen/nav_button_horizontal_padding" android:top="@dimen/nv_button_vertical_padding" />
            </shape>
        </inset>
    </item>

</selector>