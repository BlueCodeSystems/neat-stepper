<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BottomNavButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/nav_button_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:background">@drawable/nas_nav_button_background</item>
    </style>

    <style name="BottomNavButtonStyle.Back" parent="BottomNavButtonStyle">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawableStart">@drawable/ic_chevron_left</item>
    </style>

    <style name="BottomNavButtonStyle.Complete" parent="BottomNavButtonStyle">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
    </style>
</resources>